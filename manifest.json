{
  "manifest_version": 3,
  "name": "MTWC Timer",
  "version": "1.0.0",
  "description": "An extension to set and manage timers with MTWC Timer.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  }
}
